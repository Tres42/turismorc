<h1>Paquete</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Titulo</th>
            <td>{{ entity.titulo }}</td>
        </tr>
        <tr>
            <th>Fecha Salida</th>
            <td>{{ entity.fechaSalida|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Es Grupal</th>
            <td>{{ entity.esGrupal }}</td>
        </tr>
        <tr>
            <th>Es Promocion</th>
            <td>{{ entity.esPromocion }}</td>
        </tr>
        <tr>
            <th>Observaciones</th>
            <td>{{ entity.observaciones }}</td>
        </tr>
        <tr>
            <th>Tarifas</th>
            <td>{{ entity.tarifas }}</td>
        </tr>
        <tr>
            <th>Servicios Incluido</th>
            <td>{{ entity.servicioIncluido }}</td>
        </tr>
        <tr>
            <th>Servicios No Incluido</th>
            <td>{{ entity.servicioNoIncluido }}</td>
        </tr>
        <tr>
            <th>Resumen</th>
            <td>{{ entity.resumen }}</td>
        </tr>
        <tr>
            <th>Categoria</th>
            <td>{{ entity.categoria }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('destinos') }}">
            Volver a paquetes
        </a>
    </li>
    <li>
        <a href="{{ path('destinos_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>
        <form action="{{ path('destinos_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
</ul>
