{% extends 'T42DestinosBundle::layout.html.twig' %}

{% block content %}

<h1>Editar Paquete de viajes</h1>

<form action="{{ path('t42_destinos_paquete_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn btn-info" type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('t42_destinos_paquete_index') }}">
            Volver a listado de paquetes
        </a>
    </li>
    <li>
        <form action="{{ path('t42_destinos_paquete_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                {% if is_granted('ROLE_PAQUETES_DELETE') %}
                    <button class="btn btn-danger" type="submit">Eliminar</button>                
                {% endif %}
        </form>
    </li>
</ul>

{% endblock %}