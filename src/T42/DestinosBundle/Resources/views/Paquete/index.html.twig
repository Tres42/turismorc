{% extends 'T42DestinosBundle::layout.html.twig' %}

{% block content %}

<h1>Paquetes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titulo</th>
            <th>Fecha de Salida</th>
            <th>Es Grupal</th>
            <th>Es Promocion</th>
            <th>Tarifas</th>
            <th>Resumen</th>
            <th>Categoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('destinos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.titulo }}</td>
            <td>{% if entity.fechaSalida %}{{ entity.fechaSalida|date('d/m/Y') }}{% endif %}</td>
            <td>{% if entity.esGrupal %} Si {% else %} No {% endif %}</td>
            <td>{% if entity.esPromocion %} Si {% else %} No {% endif %}</td>
            <td>{{ entity.tarifas }}</td>
            <td>{{ entity.resumen }}</td>
            <td>{{ entity.categoria }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('destinos_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('destinos_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('destinos_new') }}">
            Crear nuevo paquete
        </a>
    </li>
</ul>

{% endblock %}