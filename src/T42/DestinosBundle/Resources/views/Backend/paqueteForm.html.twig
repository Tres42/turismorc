{{ form_row(form.titulo) }}
{{ form_row(form.resumen) }}
{{ form_row(form.segmento, {'attr': {'class': 'select2 span8'} }) }}
{{ form_row(form.lugares, {'attr': {'class': 'select2 span8'} }) }}
<div class="control-group{% if form.fechasDeSalida.vars.errors|length > 0 %} error{% endif %}">
    {{ form_label(form.fechasDeSalida, null, { 'label_attr': {'class': 'control-label collection-label'} }) }}
    <div class="controls">
        {% spaceless %}
        <ul class="inline collection" data-prototype="{{ form_widget(form.fechasDeSalida.vars.prototype, {'attr': {'class': 'span6'} })|e }}">
        {% for fecha in form.fechasDeSalida %}
            <li>{{ form_widget(fecha, {'attr': {'class': 'span6'} }) }}</li>
        {% endfor %}
        </ul>
        {% endspaceless %}
        {{ form_errors(form.fechasDeSalida) }}
    </div>
</div>
{{ form_row(form.esGrupal) }}
{{ form_row(form.esDestacado) }}
{{ form_row(form.observaciones) }}
<div class="control-group{% if form.tarifas.vars.errors|length > 0 %} error{% endif %}">
    {{ form_label(form.tarifas, null, { 'label_attr': {'class': 'control-label collection-label'} }) }}
    <div class="controls">
        {% spaceless %}
        <ul class="unstyled collection" data-prototype="{{ form_widget(form.tarifas.vars.prototype.descripcion, {'attr': {'placeholder': 'Descripción', 'class': 'span7'} })|e }}<div class='input-append'>{{ form_widget(form.tarifas.vars.prototype.precio, {'attr': {'placeholder': 'Precio', 'class': 'span5'} })|e }}<span class='add-on'>U$S</span></div>">
        {% for tarifa in form.tarifas %}
            <li>
                {{ form_widget(tarifa.descripcion, {'attr': {'placeholder': 'Descripción', 'class': 'span7'} }) }}
                <div class="input-append">
                    {{ form_widget(tarifa.precio, {'attr': {'placeholder': 'Precio', 'class': 'span5'} }) }}
                    <span class="add-on">U$S</span>
                </div>
            </li>
        {% endfor %}
        </ul>
        {% endspaceless %}
        {{ form_errors(form.tarifas) }}
    </div>
</div>
{{ form_rest(form) }}