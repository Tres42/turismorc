{% extends 'T42UserBundle::layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="span12"> 
        <h2>Usuarios</h2>
        <div class="row">
            <div class="span3">
                <ul class="nav nav-tabs nav-stacked">
                    <li><a href="{{ path('t42_user_invitation_new') }}"><i class="icon-user"></i> Enviar invitaci&oacute;n a usuario</a></li>
                    <li><a href="{{ path('t42_backend_index') }}"><i class="icon-arrow-left"></i> Volver</a></li>
                </ul>
            </div>
            <div class="span7 offset1">
                <table class="table table-condensed table-striped">
                    <thead>
                        <tr>
                            <td>Apellido y Nombre</td>
                            <td>Nombre de Usuario</td>
                            <td>Email</td>
                            <td>Ultimo Login</td>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.lastname ~ ', ' ~ entity.firstname}}</td>
                                <td>{{ entity.username }}</td>
                                <td>{{ entity.email }}</td>
                                <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('d-m-Y H:i:s') }}{% endif %}</td>
                                <td>
                                    <a href="{{ path('fos_user_profile_show', { 'id': entity.id }) }}"><i class="icon-list"></i></a>
                                    <a href="{{ path('fos_user_profile_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a>
                                    <a href="{{ path('fos_user_profile_delete', { 'id': entity.id }) }}"><i class="icon-remove"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}